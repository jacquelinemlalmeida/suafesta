<h1 class="text-3xl font-extrabold text-purple-700 mb-6">🎊 Minhas Festas</h1>

<table class="w-full table-auto border-collapse bg-white rounded-xl shadow overflow-hidden">
  <thead class="bg-purple-100 text-purple-700">
    <tr>
      <th class="px-4 py-2 text-left">Nome do Aniversariante</th>
      <th class="px-4 py-2 text-left">Data</th>
      <th class="px-4 py-2 text-left">Total de Convidados</th>
    </tr>
  </thead>
  <tbody>
    <% @parties.each_with_index do |party, index| %>
      <% participants_count = party.participants.count %>
      <% guests_count = Guest.joins(:participant).where(participants: { party_id: party.id }).count %>

      <tr
        data-action="click->collapse#toggle"
        data-collapse-target="section"
        class="cursor-pointer hover:bg-purple-50 transition"
      >
        <td class="px-4 py-3 border-b border-purple-100 font-semibold text-purple-800"><%= party.birthday_person_name %></td>
        <td class="px-4 py-3 border-b border-purple-100"><%= l(party.scheduled_at, format: :long) %></td>
        <td class="px-4 py-3 border-b border-purple-100"><%= participants_count + guests_count %></td>
      </tr>

      <tr class="hidden bg-purple-50" data-collapse-target="content">
        <td colspan="3" class="px-6 py-4">
          <p><strong>Endereço:</strong> <%= party.street %>, <%= party.number %> - <%= party.city %>, <%= party.state %></p>
          <p><strong>Status:</strong> <%= party.active? ? "Ativa 🎉" : "Inativa ❌" %></p>
          <%= link_to "Editar Festa", edit_party_path(party), class: "inline-block mt-3 bg-purple-600 hover:bg-purple-700 text-white font-bold py-1 px-4 rounded" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
