<h2 class="text-2xl font-bold text-center text-purple-800 mb-6">Cadastro</h2>

<%= form_with model: @user, class: "max-w-md mx-auto bg-white p-6 rounded-xl shadow" do |f| %>
  <div class="mb-4">
    <%= f.label :email, class: "block text-purple-700 font-semibold" %>
    <%= f.email_field :email, class: "w-full border border-gray-300 rounded px-3 py-2" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, class: "block text-purple-700 font-semibold" %>
    <%= f.password_field :password, class: "w-full border border-gray-300 rounded px-3 py-2" %>
  </div>

  <div class="mb-4">
    <%= f.label :password_confirmation, class: "block text-purple-700 font-semibold" %>
    <%= f.password_field :password_confirmation, class: "w-full border border-gray-300 rounded px-3 py-2" %>
  </div>

  <div class="mb-4">
    <%= f.label :telefone, class: "block text-purple-700 font-semibold" %>
    <%= f.text_field :telefone, class: "w-full border border-gray-300 rounded px-3 py-2" %>
  </div>

  <div class="mb-4">
    <%= f.label :estado, class: "block text-purple-700 font-semibold" %>
    <%= f.text_field :estado, class: "w-full border border-gray-300 rounded px-3 py-2" %>
  </div>

  <div class="mb-4">
    <%= f.label :cidade, class: "block text-purple-700 font-semibold" %>
    <%= f.text_field :cidade, class: "w-full border border-gray-300 rounded px-3 py-2" %>
  </div>

  <div class="text-center">
    <%= f.submit "Cadastrar", class: "bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
<% end %>
